<?xml version="1.0"?>
<robot name ="scara1">

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>
    <material name="blue">
        <color rgba="0 0 .8 1"/>
    </material>
    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>



    <link name = "world"></link>

    <link name="base_link">
        <visual>
            <geometry>
                <mesh filename="file:///home/viktor/catkin_ws/src/scara_urdf_testing/urdf/testSCARA/1zlta_kokotina.stl"></mesh>
            </geometry>
            <origin xyz="0 0 0"/>
            <material name="blue"/>
        </visual>
    </link>
    <joint name="baseLink_to_world" type="fixed">
        <parent link="world"/>
        <child link="base_link"/>
        <origin rpy="1.57 0 0" xyz="0 0 0.5"/>
        <axis xyz = "1 0 0"></axis>
    </joint>





    <link name ="robot_link1">
        <visual>
            <geometry>
                <mesh filename="file:///home/viktor/catkin_ws/src/scara_urdf_testing/urdf/testSCARA/1zelena_kokotina.stl"></mesh>
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <material name="white"/>
        </visual>
    </link>

    <joint name="robotLink1_to_robotBaseLink" type="continuous">
        <parent link="base_link"/>
        <child link="robot_link1"/>
        <origin xyz="0 0 0"/>
        <axis xyz = "0 1 0"></axis>
    </joint>



    <link name ="robot_link2">
        <visual>
            <geometry>
                <mesh filename="file:///home/viktor/catkin_ws/src/scara_urdf_testing/urdf/testSCARA/1cervena_kokotina.stl"></mesh>
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <material name="white"/>
        </visual>
    </link>
    <joint name="robotLink2_to_robotLink1" type="continuous">
        <parent link="robot_link1"/>
        <child link="robot_link2"/>
        <origin xyz="8 0 0"/>
        <axis xyz = "0 1 0"></axis>
    </joint>







</robot>