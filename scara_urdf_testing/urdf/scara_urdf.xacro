<?xml version="1.0"?>
<robot name ="scara1">

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>
    <material name="blue">
        <color rgba="0 0 .8 1"/>
    </material>
    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>



    <link name = "world"></link>

    <link name="base_link">
        <visual>
           <geometry>
                <box size = " 3 3 0.9"/>
            </geometry>
            <origin xyz="0 0 0"/>
            <material name="blue"/>
        </visual>
    </link>

    <joint name="baseLink_to_world" type="fixed">
        <parent link="world"/>
        <child link="base_link"/>
        <origin xyz="0 0 0.5"/>
        <axis xyz = "1 0 0"></axis>
    </joint>



    <link name="robot_base">
        <visual>
            <geometry>
                <cylinder length="0.1" radius="0.2"/>
            </geometry>
            <origin xyz="0 0 0"/>
            <material name="red"/>
        </visual>
    </link>


    <joint name="base_to_world" type="fixed">
        <parent link="world"/>
        <child link="robot_base"/>
        <origin xyz="0 0 0.95"/>
        <axis xyz = "1 0 0"></axis>
    </joint>



    <link name = "robot_baseLink">
        <visual>
            <geometry>
                <cylinder length="1" radius="0.1"/>
            </geometry>
            <origin xyz ="0 0 0.5"></origin>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="1" radius="0.1"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="10"/>
            <inertia ixx="0.4" ixy="0.0" ixz="0.0" iyy="0.4" iyz="0.0" izz="0.2"/>
        </inertial>
    </link>

    <joint name="robotBaseLink_to_base" type="fixed">
        <parent link="base_link"/>
        <child link="robot_baseLink"/>
        <origin xyz="0 0 0.5"/>
        <axis xyz = "1 0 0"></axis>
    </joint>




    <link name ="robot_link1">
        <visual>
            <geometry>
                <box size = "1 0.2 0.1"></box>
            </geometry>
            <origin rpy="0 0 0" xyz="0.4 0 0"/>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <box size = "1 0.2 0.1"></box>
            </geometry>
        </collision>
        <inertial>
            <mass value="10"/>
            <inertia ixx="0.4" ixy="0.0" ixz="0.0" iyy="0.4" iyz="0.0" izz="0.2"/>
        </inertial>
    </link>

    <joint name="robotLink1_to_robotBaseLink" type="continuous">
        <parent link="robot_baseLink"/>
        <child link="robot_link1"/>
        <origin xyz="0 0 1"/>
        <axis xyz = "0 0 1"></axis>
    </joint>



    <link name ="robot_link2">
        <visual>
            <geometry>
                <box size = "0.8 0.2 0.1"></box>
            </geometry>
            <origin rpy="0 0 0" xyz="0.3 0 0"/>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <box size = "0.8 0.2 0.1"></box>
            </geometry>
        </collision>
        <inertial>
            <mass value="10"/>
            <inertia ixx="0.4" ixy="0.0" ixz="0.0" iyy="0.4" iyz="0.0" izz="0.2"/>
        </inertial>
    </link>

    <joint name="robotLink2_to_robotLink1" type="continuous">
        <parent link="robot_link1"/>
        <child link="robot_link2"/>
        <origin xyz="0.7 0 -0.1"/>
        <axis xyz = "0 0 1"></axis>
    </joint>



    <link name ="robot_link3">
        <visual>
            <geometry>
                <cylinder length="0.8" radius="0.05"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.8" radius="0.05"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="5"/>
            <inertia ixx="0.4" ixy="0.0" ixz="0.0" iyy="0.4" iyz="0.0" izz="0.2"/>
        </inertial>
    </link>

    <joint name="robotLink3_to_robotLink2" type="prismatic">
        <parent link="robot_link2"/>
        <child link="robot_link3"/>
        <limit  lower="-0.35" upper="0.35"  effort="1000.0" velocity="0.05"/>
        <origin xyz="0.65 0 0"/>
        <axis xyz = "0 0 1"></axis>
    </joint>







</robot>